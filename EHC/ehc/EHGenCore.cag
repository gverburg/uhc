%%[8
SEM Expr
  | Rec         loc         .   rcexpr          =   if @recExpr.isExtFromEmpty
                                                    then  foldl CExpr_App (CExpr_Tup CTagRec)
                                                          . map (\(_,CExpr_TupIns _ _ _ _ e) -> e)
                                                          . tyRowCanonOrder
                                                          $ @recExpr.fuCExprL
                                                    else  fuMkCExpr @lUniq3 (reverse @recExpr.fuCExprL) @recExpr.recCExpr
                loc         .   cexpr           =   @rcexpr
