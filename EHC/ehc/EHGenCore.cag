SEM Decl
  | Instance    lhs         .   cbindL      =   let  nDflt = rulNmEvid . pigiRule $ @pigi
                                                     nStrictDflt = hsnSuffix nDflt "!"
                                                     nR = hsnPrefix "_res_" @dictNm
                                                     nStrictR = hsnSuffix nR "!"
                                                     mkSet d n v = CExpr_TupUpd d CTagRec n (cdictOffset n @recTy) v
                                                     dDflt
                                                        = mkCExprStrictIn nStrictDflt (CExpr_App (CExpr_Var nDflt) (CExpr_Var nR))
                                                            (\d -> mkSetFlds d (zipWith CBind_Bind @supClsNmL @supPrfEvidL))
                                                     mkSetFlds d bs = foldr (\(CBind_Bind n v) d -> mkSet d n v) d bs
                                                     dD = mkCExprLam @ctxtArgNmL
                                                                (mkCExprLetRec
                                                                    ([CBind_Bind nR
                                                                        (mkCExprStrictIn nStrictR dDflt (\d -> mkSetFlds d @decls.cbindL))]
                                                                     ++ (@cSubst `cSubstApp` (@supPrfIntroCBindL ++ @prfIntroCBindL)))
                                                                    (CExpr_Var nR)
                                                                )
                                                in   [CBind_Bind @dictNm (@cSubst `cSubstApp` dD)]
  | InstanceIntro
                lhs         .   cbindL      =   [CBind_Bind @dictNm @expr.cexpr]
