ATTR CExpr [ | | cafNmMp USE {`Map.union`} {Map.empty}: LamInfoMp ]

SEM CExpr
  | Let         lhs         .   lamNmMp     =   @binds.bindLamMp `Map.union` @body.lamNmMp
