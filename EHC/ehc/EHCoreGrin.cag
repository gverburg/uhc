%%[8
ATTR AllBind [ | | bindLamMp USE {`Map.union`} {Map.empty}: LamInfoMp ]
ATTR AllBind [ | | bindCafMp USE {`Map.union`} {Map.empty}: LamInfoMp ]

SEM CBind
  | Bind        lhs         .   (bindLamMp,bindCafMp)
                                            =   if @expr.isLam
                                                then (@nm `Map.singleton` length @expr.grLamArgL,Map.empty)
                                                else (Map.empty,@nm `Map.singleton` 0)
  | FFI         loc         .   (argTyL,resTy)
                                            =   tyArrowArgsRes @ty
                lhs         .   bindLamMp   =   @nm `Map.singleton` length @argTyL

SEM CExpr
  | Let         loc         .   lamMp       =   @binds.bindLamMp `Map.union` @lhs.lamMp
