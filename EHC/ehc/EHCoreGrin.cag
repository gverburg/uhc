%%[8 hs
cmodGrin :: UID -> CModule -> GrModule
cmodGrin uniq cmod
  =  let  t = wrap_CodeAGItf  (sem_CodeAGItf (CodeAGItf_AGItf cmod))
                              (Inh_CodeAGItf {gUniq_Inh_CodeAGItf = uniq})
     in   grMod_Syn_CodeAGItf t
