%%[1.PatExpr
DATA PatExpr
  | IConst          int             : {Int}
  | CConst          char            : {Char}
  | Con             nm              : {HsName}
  | Var             nm              : {HsName}
  | VarAs           nm              : {HsName}
                    patExpr         : PatExpr
  | App             func            : PatExpr
                    arg             : PatExpr
  | AppTop          patExpr         : PatExpr
  | Parens          patExpr         : PatExpr
%%]
      
%%[4
DATA PatExpr
  | TypeAs          tyExpr          : TyExpr
                    patExpr         : PatExpr
%%]

%%[7
DATA PatExpr
