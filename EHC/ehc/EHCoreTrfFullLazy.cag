%%[8 hs
mkTrf :: Bool -> Int -> Int -> HsName -> CExpr -> (CExpr,LevBindSq)
mkTrf cond outerLev hereLev n e
  =  if cond
     then (CExpr_Var n,unitSeq (hereLev,(CBindPlain,[CBind_Bind n e])))
     else (e,emptySeq)

mkLetTrf' :: LevBindSq -> CExpr -> (Bool,CExpr)
mkLetTrf' bs ce
  =  let  l = seqToList bs
     in   (not (null l),foldr (\(_,(c,b)) e -> mkCExprLet c b e) ce l)

mkLetTrf :: LevBindSq -> CExpr -> CExpr
mkLetTrf bs ce = snd (mkLetTrf' bs ce)
%%]

%%[8
ATTR AllCodeNT [ | | cTrf: SELF ]
ATTR CodeAGItf [ | | cTrf: CModule ]

SEM CExpr
  | App Lam Case TupDel TupIns TupUpd Let
                loc         .   trNm        =   uidHNm @lUniq
  | Lam         loc         .   trNm2       =   uidHNm @lUniq2
  | TupIns TupUpd TupDel
                loc         .   trfIsOk     =   @lhs.appTrfIsOk == AppYesLet && @lhs.isTopTup
                (lhs.cTrf,loc.levBindSq)    =   mkTrf @trfIsOk @lhs.lev @levOf @trNm @cTrf
  | App Case
                loc         .   trfIsOk     =   @lhs.appTrfIsOk == AppYesLet && @lhs.isTopApp
                (lhs.cTrf,loc.levBindSq)    =   mkTrf @trfIsOk @lhs.lev @levOf @trNm @cTrf
  | Lam         loc         .   trfIsOk     =   @lhs.lamTrfIsOk == LamYesLet
                (lhs.cTrf,loc.levBindSq)    =   let mkTLB = mkTrf @trfIsOk @lhs.lev @levOf @trNm
                                                          . CExpr_Lam @arg
                                                          . mkLetTrf @hereBindSq
                                                in  case @body.cTrf of
                                                        CExpr_Lam _ _ | not (null (seqToList @hereBindSq))
                                                            -> mkTLB (CExpr_Let CBindPlain [CBind_Bind @trNm2 @body.cTrf] (CExpr_Var @trNm2))
                                                        _   -> mkTLB @body.cTrf
  | Let         loc         .   trfIsOk     =   @lhs.letTrfIsOk
                (lhs.cTrf,loc.levBindSq)    =   let  lt = mkLetTrf @hereBindSq @body.cTrf
                                                in   mkTrf @trfIsOk @lhs.lev @levOf @trNm lt

SEM CAlt
  | Alt         lhs         .   cTrf        =   CAlt_Alt @pats.cTrf (mkLetTrf @hereBindSq @expr.cTrf)
%%]

