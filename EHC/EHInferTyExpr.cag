%%% Predicates
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%[9
ATTR PrExpr [ | | pr: Pred ]

SEM PrExpr
  | Class       loc         .   pr                  =   Pred_Class (@nm `mkTyConApp` @tyExprs.tyL)
  | Arrow       loc         .   pr                  =   Pred_Pred @prTy
%%]

%%[9
ATTR PrExpr [ | | prTy: Ty ]

SEM PrExpr
  | Arrow       loc         .   prTy                =   [@arg.prTy] `mkTyArrow` @res.prTy
  | * - Arrow   loc         .   prTy                =   @ty
%%]

%%[10
SEM PrExpr
  | Lacks       loc         .   pr                  =   Pred_Lacks @rowTyExpr.tyRow @nm
  | DynVar      loc         .   pr                  =   Pred_Class ((hsnDynVar `hsnConcat` @nm) `mkTyConApp` [@tyExpr.ty])
%%]

%%[9
ATTR PrExprs [ | | prL: {[Pred]} ]

SEM PrExprs
  | Nil         lhs         .   prL                 =   []
  | Cons        lhs         .   prL                 =   @hd.pr : @tl.prL
%%]

%%[9
ATTR PrExpr [ | | ty: Ty ]
ATTR PrExprs [ | | tyL: TyL ]

SEM PrExpr
  | *           loc         .   ty                  =   Ty_Pred @pr

SEM PrExprs
  | Nil         lhs         .   tyL                 =   []
  | Cons        lhs         .   tyL                 =   @hd.ty : @tl.tyL
%%]


