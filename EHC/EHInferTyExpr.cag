%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%[7
ATTR RowTyExpr [ | | tyRow: Ty ]

SEM TyExpr
  | Row         loc         .   ty                  =   @rowTyExpr.tyRow

SEM RowTyExpr
  | Empty       lhs         .   tyRow               =   tyRowEmpty
  | Ext         lhs         .   tyRow               =   Ty_Ext @rowTyExpr.tyRow @nm @tyExpr.ty
%%]

%%[9
SEM RowTyExpr
  | Var         lhs         .   tyRow               =   tgiTy @tgi
%%]

