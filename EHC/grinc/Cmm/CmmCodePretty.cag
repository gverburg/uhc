%%[8 hs
ppCmmUnit :: CmmUnit -> PP_Doc
ppCmmUnit cmmUnit
  =  let  t = wrap_CmmUnit (sem_CmmUnit cmmUnit) Inh_CmmUnit
     in   (pp_Syn_CmmUnit t)

instance PP CmmUnit where
  pp cu = ppCmmUnit cu
