%%[8 hs
tyNmIsUnboxedForFFIRes :: HsName -> Bool
tyNmIsUnboxedForFFIRes
  = (`elem` ns)
  where ns = [ hsnInt, hsnChar, hsnPackedString ]
%%]

%%[8
SEM CBind
  | FFI         loc         .   (nmRes,nmArgL,nmArgPatL)
                                            =   let  (nmRes:nmArgL) = take (length @argTyL + 1) (hsnUniqSupplyL @lUniq)
                                                     nmArgPatL = map (hsnPrefix "_") nmArgL
                                                in   (nmRes,nmArgL,nmArgPatL)
                lhs         .   grBindL     =   let  mkPat ty n
                                                       =  case tyConNm ty of
                                                            t | tyNmIsUnboxedForFFIRes t -> mkGrPatConNode 0 t [n]
                                                            _                            -> GrPat_Var n
                                                     resTyNm = tyConNm @resTy
                                                     resIsUnboxed = tyNmIsUnboxedForFFIRes resTyNm
                                                     resTagL
                                                       = case dataGamTagsOfTy @resTy @lhs.dataGam of
                                                           Just ts          -> [ GrTag_Lit GrTagCon (ctagTag' t) (ctagNm t) | t <- ts ]
                                                           _ | resIsUnboxed -> [ GrTag_Unboxed ]
                                                             | otherwise    -> [ GrTag_Any ]
                                                     mkRes v
                                                       = if resIsUnboxed
                                                         then \e -> GrExpr_Seq e (mkGrUnboxFFI @nmRes) (GrExpr_Unit (mkGrBox resTyNm (GrVal_Var v)))
                                                         else id
                                                in   [GrBind_Bind @nm @nmArgL
                                                        (foldr  (\(n,p) e -> GrExpr_Seq (GrExpr_Eval n) p e)
                                                                (mkRes @nmRes (GrExpr_FFI @impEnt @nmArgPatL resTagL))
                                                        . zip @nmArgL
                                                        . zipWith mkPat @argTyL
                                                        $ @nmArgPatL
                                                        )
                                                     ]
%%]

