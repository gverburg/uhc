%%[8
ATTR CPat    [ | | patNm: HsName ]

SEM CPat
  | Var Con Int Char
%%[[99
    BoolExpr
%%]]
                loc         .   patNm       =   cpatNmEither id id @pnm
  | Undef       loc         .   patNm       =   hsnUnknown
%%]

%%[8
ATTR CPat    [ | | grPat: GrPat ]
ATTR CPatL   [ | | grPatL: GrPatL ]

SEM CPat
  | Var         lhs         .   grPat       =   GrPat_Var @patNm
  | Int         lhs         .   grPat       =   GrPat_LitInt @int
  | Char        lhs         .   grPat       =   GrPat_LitInt (ord @char)
  | Con         lhs         .   (grPat,grWrapCase)
                                            =   case @binds.cpatRest of
                                                   CPatRest_Empty
                                                     ->  (ctag mkGrPatRecNode (\_ l t _ -> mkGrPatConNode t l) @tag @binds.patNmL,id)
                                                   CPatRest_Var r
                                                     ->  let  (oL,mkSL) = unzip @binds.grTupFldL
                                                              (oL',wrO) = unboxArgL @lUniq hsnInt oL
                                                         in   (ctag mkGrPatRecSplit (\_ l t _ -> mkGrPatConSplit t l) @tag r . zipWith ($) mkSL $ oL',wrO)
  | Undef       lhs         .   grPat       =   GrPat_Empty

SEM CPatL
  | Cons        lhs         .   grPatL      =   @hd.grPat : @tl.grPatL
  | Nil         lhs         .   grPatL      =   []
%%]

%%[99
SEM CPat
  | BoolExpr    lhs         .   grPat       =   GrPat_Empty -- transformed into explicit if-then-else
%%]

%%[8
ATTR AllPatBind [ | | patNmL USE {++} {[]}: {[HsName]} ]
ATTR AllPatBind [ | | grTupFldL USE {++} {[]}: {[(GrVal,GrVal->GrSplit)]} ]

SEM CPatBind
  | Bind        lhs         .   patNmL      =   [@pat.patNm]
                            .   grTupFldL   =   [(@offset.grVal,\o -> GrSplit_Sel @pat.patNm o)]
%%]

%%[8
ATTR AllPat AllAlt [ | | grWrapCase USE {`const`} {id}: {GrExpr -> GrExpr} ]
ATTR AllPat AllAlt [ | | grWrapCaseSel USE {`const`} {idGrWrapCaseSel}: {GrVal -> (GrVal,GrExpr->GrExpr)} ]

SEM CPat
  | Int Char    lhs         .   grWrapCaseSel
                                            =   let n = uidHNm @lUniq
                                                in  \v -> (GrVal_Var n,GrExpr_Seq (GrExpr_Unit v) (mkGrUnbox hsnInt n))
%%]

%%[8
ATTR CPatRest [ | | cpatRest: SELF ]
ATTR CPatConBind [ | | cpatRest: CPatRest ]

SEM CPatConBind
  | Many		lhs			.	cpatRest	=	error "CPatConBind.Many.cpatRest"
%%]

