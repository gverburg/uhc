%%[12
ATTR AGItf Expr [ | | gathValGam: ValGam ]

SEM Expr
  | Let         lhs         .   gathValGam          =   @body.gathValGam `gamUnion` @finValGamDecls
  | * - Let     lhs         .   gathValGam          =   emptyGam
%%]

%%[12
ATTR AGItf Expr [ | | gathTyGam: TyGam ]

SEM Expr
  | Let         lhs         .   gathTyGam           =   @body.gathTyGam `gamUnion` @lQuTyGam
  | * - Let     lhs         .   gathTyGam           =   emptyGam
%%]

%%[12
ATTR AGItf Expr [ | | gathKiGam: KiGam ]

SEM Expr
  | Let         lhs         .   gathKiGam           =   @body.gathKiGam -- `gamUnion` @xxx
  | * - Let     lhs         .   gathKiGam           =   emptyGam
%%]

%%[12
ATTR AGItf Expr [ | | gathPrIntroGam: PrIntroGam ]

SEM Expr
  | Let         lhs         .   gathPrIntroGam      =   @body.gathPrIntroGam `gamUnion` @lQuPrIGam
  | * - Let     lhs         .   gathPrIntroGam      =   emptyGam
%%]

%%[9
ATTR Expr [ | | gathPrElimTGam: PrElimTGam ]
ATTR Expr [ gathPrfCtxtId: PrfCtxtId | | ]

SEM AGItf
  | AGItf       loc         .   gathPrfCtxtId       =   basePrfCtxtId

SEM CaseAlt
  | Pat         loc         .   gathPrfCtxtId       =   @lhs.prfCtxtId

SEM RecExpr
  | Expr Ext Upd
                loc         .   gathPrfCtxtId       =   @lhs.prfCtxtId

SEM DataFieldExpr
  | Expr Upd    loc         .   gathPrfCtxtId       =   @lhs.prfCtxtId

SEM Decl
  | InstanceIntro Val
                loc         .   gathPrfCtxtId       =   @lhs.prfCtxtId

SEM Expr
  | Let         lhs         .   gathPrElimTGam      =   peTGamUnion2 @prfCtxtId @lhs.gathPrfCtxtId @decls.patPrElimTGam @body.gathPrElimTGam
  | * - Let     lhs         .   gathPrElimTGam      =   emptyTGam @lhs.gathPrfCtxtId
%%]

%%[99
SEM PatExpr
  | Expr        loc         .   gathPrfCtxtId       =   @lhs.prfCtxtId
%%]

