%%[8 hs
cpatVarNm :: CPat -> CPatNm
cpatVarNm (CPat_Var         n     )  = n
cpatVarNm (CPat_Con         n _ _ )  = n
cpatVarNm (CPat_Int         n _   )  = n
cpatVarNm (CPat_Char        n _   )  = n
%%[[99
cpatVarNm (CPat_BoolExpr    n _   )  = n
%%]]

cpatConTag :: CPat -> CTag
cpatConTag (CPat_Con  _ t _ )  = t
cpatConTag (CPat_Int  _ _   )  = ctagInt
cpatConTag (CPat_Char _ _   )  = ctagChar

caltTag :: CAlt -> CTag
caltTag (CAlt_Alt (p : _) _) = cpatConTag p

caltIsVar :: CAlt -> Bool
caltIsVar (CAlt_Alt (CPat_Var _ : _) _)  = True
caltIsVar _                              = False

caltIsConst :: CAlt -> Bool
caltIsConst (CAlt_Alt (p : _) _)
  = c p
  where c (CPat_Int   _ _) = True
        c (CPat_Char  _ _) = True
        c _                = False

caltPatL :: CAlt -> CPatL
caltPatL (CAlt_Alt p _) = p

caltPat :: CAlt -> CPat
caltPat = head . caltPatL

caltLPatNms :: CAltL -> [CPatNm]
caltLPatNms = nub . sort . map (cpatVarNm . caltPat)

%%]
cvarUndefined :: CExpr
cvarUndefined = CExpr_Var hsnUndefined

%%[8 hs export(caltIsConMany)
caltIsConMany :: CAlt -> Bool
caltIsConMany (CAlt_Alt (CPat_Con _ _ (CPatConBind_Many _) : _) _) = True
caltIsConMany _                                                    = False
%%]

%%[99 hs export(caltIsBoolExpr)
caltIsBoolExpr :: CAlt -> Bool
caltIsBoolExpr (CAlt_Alt (CPat_BoolExpr _ _ : _) _)  = True
caltIsBoolExpr _                                     = False
%%]

