%%[8
prefixLib :: String
prefixLib = "@PREFIX_LIB@"

libnamesGcc :: [String]
libnamesGcc
  = [ prefixLib ++ "@RTS_PKG_NAME@"]
    ++ (if useBoehmGC
        then [ "@EXTLIBS_BGC_PKG_NAME@" ]
        else []
       )
%%[[97
