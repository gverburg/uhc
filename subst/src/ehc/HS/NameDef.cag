%%[9
SEM Declaration
    | Instance
        loc         .   instancename=   maybe (mkHNm @lUniq) id @maybeinstancename
    | Class InstanceUseImplicitly
        loc         .   instancename=   mkHNm @lUniq
    | Default
        loc         .   defaultname =   mkHNm @lUniq
%%]

%%[95
SEM Deriving
    | Deriving
        loc         .   instancename=   maybe (mkHNm @lUniq) id @maybeinstancename
%%]


