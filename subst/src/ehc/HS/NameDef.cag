%%[20 -7.FieldDeclaration.refname
SEM FieldDeclaration
    | FieldDeclaration
        loc             .   fldrefnames =   map (hsnSetLevQual @lhs.nmLev @lhs.moduleNm) @names
%%]

%%[7.RecordPatternBinding.refname
SEM RecordPatternBinding
    | Pun
        loc             .   refname     =   @name
%%]

%%[20 -7.RecordPatternBinding.refname
SEM RecordPatternBinding
    | Pun
