%%% Misc: Pattern internal info
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%[1
SEM Pattern
    | Constructor
%%[[7
      Record
%%]]
        loc         .   conNm       =   @name
%%[[5
    | InfixConstructor
        loc         .   conNm       =   @constructorOperator
%%]]
%%]

%%[1
ATTR Pattern [ | | mbTopRefname: {Maybe HsName} ]

SEM Pattern
    | Variable As
        lhs         .   mbTopRefname=   Just @refname
    | * - Variable As
        lhs         .   mbTopRefname=   Nothing
%%]

